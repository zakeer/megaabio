<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.base.BaseActivity"
    android:orientation="vertical">

    <View
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="gotoHome"
            style="@style/bottomMenuStyle"
            android:drawableTop="@drawable/ic_home"
            android:text="Home" />

        <Button
            android:onClick="gotoOrders"
            style="@style/bottomMenuStyle"
            android:drawableTop="@drawable/ic_orders"
            android:text="Orders" />

        <Button
            android:onClick="gotoCart"
            style="@style/bottomMenuStyle"
            android:drawableTop="@drawable/ic_cart"
            android:text="Cart" />

        <Button
            style="@style/bottomMenuStyle"
            android:drawableTop="@drawable/ic_about"
            android:text="About" />

        <Button
            style="@style/bottomMenuStyle"
            android:drawableTop="@drawable/ic_home"
            android:text="Contact" />

    </LinearLayout>


